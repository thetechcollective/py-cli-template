{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: gh_script.py with Arguments (in current workspace)", // TODO: Change 'gh_script.py' to the name of your main script
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/gh_script.py", // TODO: Change value to the path of your main script
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": "${command:pickArgs}"
        },
        
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}